/* pages/home/home.wxss */
/*搜索样式*/
.search {
  position:fixed;
  z-index: 500;
  left:0;
  right:0;
  top:0;

  height: 120rpx;
  width: 100%;
  background-color:#695acd5b;
}

.search image{
  width: 100%;
  height: 100%;
  opacity: 0.7;
  border-radius: 0 0 15rpx 15rpx;/*设置圆角 分别是 上左，上右，下左，下右*/
}


/* 首页的轮播图样式 */
.swiper_box {
  margin-top: 120rpx;
  height: auto;
  position: relative;
  display:flex;/*flex布局,*/
  justify-content: center;/*justify-content（水平方向）align-items（垂直方向）*/
  /*background-color:rgba(230, 225, 225, 0.534);*/
  border-radius: 15rpx 15rpx 0 0;
}

.swipers {
  height: 380rpx;
  width: 80%;
}

.swiper_box image {
  width: 100%;
  height: 100%;
  border-radius: 5% 5% 100% 100% /15rpx 15px 30% 30%;
}

/*用来包裹所有的小圆点  */
 
.dots {
  width: 210rpx;
  height: 20rpx;
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 10rpx;
}
 
/*未选中时的小圆点样式 */
 
.dot {
  width: 70rpx;
  height: 10rpx;
  border-radius: 14rpx;
  margin-right: 26rpx;
  background-color: #9d93db;
}
 
/*选中以后的小圆点样式  */
 
.active {
  width: 70rpx;
  height: 10rpx;
  background-color: #695acdd7;
}

page{
  background-color: rgba(170, 168, 168, 0.178);
}

